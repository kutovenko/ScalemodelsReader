<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_background_splash</item>
    </style>

    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Card header Theme -->
    <style name="AppTheme.LittleHeader" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- TextEdit Fields -->
    <style name="MyTextEdit" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>
    <!-- AutoComplete Fields Theme -->
    <style name="MyAutoComplete" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
    </style>
    <!-- TextViews Text Theme -->
    <style name="TextTheme" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
    </style>
</resources>
