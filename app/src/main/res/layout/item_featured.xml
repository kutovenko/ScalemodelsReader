<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="featured"
            type="com.blogspot.alexeykutovenko.scalemodelsreader.model.Featured"/>
        <variable name="callback"
            type="com.blogspot.alexeykutovenko.scalemodelsreader.ui.callbacks.FeaturedClickCallback"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:minHeight="148dp"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/item_horizontal_margin"
        android:onClick="@{() ->  callback.onClick(featured)}"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivFeaturedThumbnail"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:thumbnailUrl="@{featured.thumbnailUrl}" />

            <TextView
                android:id="@+id/tvFeaturedTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:maxLines="2"
                android:text="@{featured.title}" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>